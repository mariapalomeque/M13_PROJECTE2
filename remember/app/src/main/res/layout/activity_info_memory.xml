<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".info_memory">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/elipse2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_titulo_juegos_menu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:text="MEMORY"
                android:textSize="35sp"
                android:textColor="@color/titulo"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="40dp"
                android:gravity="end"
                android:text="@string/expli1"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="87dp"
                android:layout_marginEnd="214dp"
                android:src="@drawable/memory_instrucciones1" />


        </RelativeLayout>

        <Button
            android:id="@+id/btn_info_memory"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/boton_rectangular_lila"
            android:gravity="center"
            android:padding="5dp"
            android:text="Continuar"
            android:textSize="18sp"
             />

    </LinearLayout>


</ScrollView>
